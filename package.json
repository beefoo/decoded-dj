{
  "name": "decoded-dj",
  "description": "Generate grooves hidden in old texts",
  "scripts": {
    "build-tonal": "esbuild node_modules/tonal/dist/index.d.ts --bundle --outfile=public/js/vendor/Tonal.js --format=esm",
    "build-tone": "esbuild node_modules/tone/build/esm/index.d.ts --bundle --outfile=public/js/vendor/Tone.js --format=esm",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "tonal": "^6.4.2",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.6.2"
  }
}
